{
  "name": "ocean-pay-desktop",
  "version": "2026.3.2-t0439",
  "description": "Ocean Pay for Windows (Electron build)",
  "main": "main.js",
  "author": "Ocean and Wild Studios",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "version:stamp": "node scripts/stamp-version.js",
    "dist": "npm run version:stamp && electron-builder --win nsis --publish never",
    "dist:portable": "npm run version:stamp && electron-builder --win portable --publish never"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.oceanwildstudios.oceanpay",
    "detectUpdateChannel": false,
    "publish": [
      {
        "provider": "github",
        "owner": "OceanandWild",
        "repo": "oceanpay"
      }
    ],
    "productName": "Ocean Pay",
    "directories": {
      "output": "C:/builds/ocean-pay",
      "buildResources": "build"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "build/icon.ico"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "executableName": "OceanPay",
      "icon": "build/icon.ico",
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Ocean Pay",
      "artifactName": "Ocean.Pay.Setup.${version}.exe"
    }
  }
}
